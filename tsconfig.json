{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "useDefineForClassFields": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "jsx": "react-jsx",
    "paths": {
      "@yicchi/is-even": ["./packages/is-even/src/index.ts"],
      "@yicchi/is-odd": ["./packages/is-odd/src/index.ts"],
      "@yicchi/math": ["./packages/math/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "**/dist/**/*"]
}
